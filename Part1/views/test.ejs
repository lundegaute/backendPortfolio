<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testing</title>
</head>
<body class="bg-dark">
    <%- include("./partials/navbar.ejs", {user: user}) %>
    <div class="container w-50 text-center">
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.Email %></td>
                <td><%= user.Role %></td>
              </tr>
                
            </tbody>
          </table>
    </div>
    <div class="d-flex text-center justify-content-center border" style="height:400px">
      <div class="border p-2 w-25">
        <button class="btn btn-success btn-lg" onclick="displayLeft()">Test</button>
        <% let text = null %>
        <% let newText = text ?? "Left value is null" %>
        <h1 id="displayLeft"><%= newText %></h1>
      </div>
      <div class="border p-2 w-25">
        <button class="btn btn-success btn-lg " onclick="displayRight('<%= JSON.stringify(user) %>')">Test</button>
        <h1 id="displayRight">Testing</h1>
      </div>
    </div>
    
</body>
</html>